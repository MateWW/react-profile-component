{
    "compileOnSave": false,
    "compilerOptions": {
        "jsx": "react",
        "outDir": "./dist/out-tsc",
        "baseUrl" : "./src",
        "sourceMap": true,
        "mapRoot": "./",
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strict": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ]
    }
}
